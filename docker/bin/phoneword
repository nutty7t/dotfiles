#!/usr/bin/env python3

"""
Converts words to phone numbers.

I occasionally use this to come up with mnemonic
port numbers to use for different applications.
"""

import sys

MAPPING = {
    'a': 2,
    'b': 2,
    'c': 2,
    'd': 3,
    'e': 3,
    'f': 3,
    'g': 4,
    'h': 4,
    'i': 4,
    'j': 5,
    'k': 5,
    'l': 5,
    'm': 6,
    'n': 6,
    'o': 6,
    'p': 7,
    'q': 7,
    'r': 7,
    's': 7,
    't': 8,
    'u': 8,
    'v': 8,
    'w': 9,
    'x': 9,
    'y': 9,
    'z': 9
}

WORD = ''.join(sys.argv[1:]).lower()
NUMBER = ''
for letter in WORD:
    if letter in MAPPING.keys():
        NUMBER += str(MAPPING[letter])
    else:
        NUMBER += letter

print(NUMBER)
