#!/usr/bin/env zsh

# Taken from the Powerlevel10k ZSH theme
function prompt-length () {
	emulate -L zsh
	local COLUMNS=${2:-$COLUMNS}
	local -i x y=$#1 m
	if (( y )); then
		while (( ${${(%):-$1%$y(l.1.0)}[-1]} )); do
			x=y
			(( y *= 2 ));
		done
		local xy
		while (( y > x + 1 )); do
			m=$(( x + (y - x) / 2 ))
			typeset ${${(%):-$1%$m(l.x.y)}[-1]}=$m
		done
	fi
	echo $x
}

prompt-length $1
